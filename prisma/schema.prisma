// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String @id @default(uuid())
  name       String
  github_id  Int
  avatar_url String
  login      String

  Message Message[]
  @@map("users")
}

model Message {
  id         String   @id @default(uuid())
  text       String
  created_at DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  userId String
  @@map("messages")
}
